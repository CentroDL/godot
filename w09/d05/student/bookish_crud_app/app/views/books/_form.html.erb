<!-- _form.html.erb -->
<%= form_for @book do |f| %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :released_on %>
<%= f.date_field :released_on %>

<%= f.label :genre %>
<%= f.text_field :genre %>

<%= f.label :author_id %>
<%= f.collection_select :author_id, Author.all, :id, :name %>

<%= f.submit %>

<% end %>

