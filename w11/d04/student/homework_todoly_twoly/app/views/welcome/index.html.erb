<div id="content">
  <div class="task-create">
    <header>
      <h1>Todo.ly</h1>
      <h2>Get stuff done!</h2>
    </header>
    <form>
      <fieldset>
        <legend>Create a New Task</legend>
        <label>
          New Task <input type="text" name="item" />
        </label>
        <button>Save</button>
      </fieldset>
    </form>
  </div>
  <div class="task-list">
    <h3>Tasks To Do</h3>
    <ul id="tasks">
      <!--
        Rewrite the following to render with JavaScript templating and Ajax
       -->
      <% @tasks.each do |task| %>
        <li data-is_complete="<%= task.complete? ? "true" : "false" %>" data-id="<%= task.id %>">
          <span class="description <%= task.complete? ? "complete" : "" %>">
            <%= task.description %></span>
          <input type="checkbox"  <%= task.complete? ? "checked" : "" %>/>
          <span class="remove">&times;</span>
        </li>
      <% end %>

      <script type="text/template">
        <li data-is_complete="<%% task.complete? %>" >
        <span></span>
        <input>
        <span></span>
        </li>
      </script>
    </ul>
  </div>
</div>
